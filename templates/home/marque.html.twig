   <div class="col-lg-7 col-xl-6">
      <div class="container min-vh-lg-80 d-flex align-items-center">
         <div class="row justify-content-center">
            <div class="col col-md-10 col-xl-9 text-center text-lg-left">
               <section>
                  <div data-aos="fade-right">
                     <h1 class="display-5">Masque Anti Point Noir au <mark data-aos="highlight-text" data-aos-delay="200">Thé Vert</mark> !</h1>
                     <p class="lead">
                        Berspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam.
                     </p>

                    {% for product in products  %}

                    
                     <div class="d-flex flex-wrap" style=" margin-bottom: 20px; ">
                      {% for number in 1..4  %}
                        <div class="custom-control custom-radio mr-4" style=" background: #8bc88924; padding: 10px 0px; padding-left: 50px; color: #192d35; padding-right: 30px; border-radius: 50px; width: 100%; margin-bottom: 10px; margin-right: 0px !important; ">

                          <input type="radio" id="product-{{product.id}}-{{number}}" name="product-{{product.id}}" class="custom-control-input" value="{{number}}"> 

                          <label class="custom-control-label" for="product-{{product.id}}-{{number}}">

                            {% for i in 1..number  %}
                             <img src="https://i.ya-webdesign.com/images/loading-gif-png-5.gif" data-srcset="https://imgur.com/4a17ASN.png 1x"  alt="Background" class="buy-product lazy" data-src="https://imgur.com/4a17ASN.png">
                            {% endfor  %}
                            {% if product.getNumberOfGift(number) %}
                              {% for i in 1..product.getNumberOfGift(number)  %}

                             <img  src="https://i.ya-webdesign.com/images/loading-gif-png-5.gif" data-srcset="https://imgur.com/UAzF3Ik.png 1x"  alt="Background" class="gift-product lazy" data-src="https://imgur.com/UAzF3Ik.png"  
                                {% if i == 1 %} style="margin-left: 20px;" {% endif %}  >
                              {% endfor  %}
                            {% endif %}
                            <span style=" float: right; padding: 6px 0px; margin-left: 15px;">{{number}} + {{product.getNumberOfGift(number)}} offert<br>{{number*product.getPriceTotal(number)}}€</span></label> </div>

                        {% endfor  %}
                     
                  </div>
                  <div class="d-flex flex-column flex-sm-row mt-4 mt-md-5 justify-content-center justify-content-lg-start" data-aos="fade-right" data-aos-delay="300">
                     <a onclick="addToCard({{product.id}},$('input[name=product-{{product.id}}]:checked'). val())" class="btn btn-primary btn-lg mx-sm-2 mx-lg-0 mr-lg-2 my-1 my-sm-0" >Ajouté au panier</a>
                     <a onclick="addToCard({{product.id}},$('input[name=product-{{product.id}}]:checked'). val())"  class="open-modal-payment btn btn-outline-primary btn-lg mx-sm-2 mx-lg-0 mr-lg-2 my-1 my-sm-0">Paiement direct</a>
                  </div>
                  {% else %}
